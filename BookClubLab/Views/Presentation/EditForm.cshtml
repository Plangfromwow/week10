@model Presentation;
@{
    ViewData["Title"] = "EditForm";
}

<h1>Edit Form</h1>

<form method="post" action="/presentation/edit">
    <input type="hidden" name="id" value="@Model.id" /> 
    Book Title:<input type="text" name="booktitle" value="@Model.booktitle"/><br />
    Book Author:<input type="text" name="bookauthor" value="@Model.bookauthor" /><br />
    Book Genre:<input type="text" name="genre" value="@Model.genre" /><br />
    Presentation Date: <input type="date" name="presentationdate" value="@Model.presentationdate"/><br />
    Person Presenting:
    <select name="personid">
        @foreach (Person per in (List<Person>)ViewData["people"])
        {
            <option value="@per.id" selected="@(per.id == Model.personid? "selected" : null)">
                @per.firstname @per.lastname
            </option>
        }
    </select><br />
    <input type="submit" name="save" />
</form>